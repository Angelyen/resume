<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map3"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivOldPoke"
        android:layout_width="162dp"
        android:layout_height="149dp"
        android:layout_alignTop="@+id/ivNewPoke_peepee"
        android:layout_centerHorizontal="true"
        android:src="@drawable/pokemon_pee" />

    <ImageView
        android:id="@+id/ivNewPoke_peepee"
        android:layout_width="162dp"
        android:layout_height="149dp"
        android:layout_centerInParent="true"
        android:src="@drawable/pokemon_peepee" />
    
    <ImageView
        android:id="@+id/ivNewPoke_slowbro"
        android:layout_width="162dp"
        android:layout_height="149dp"
        android:layout_centerInParent="true"
        android:src="@drawable/pokemon_slowbro" />

</RelativeLayout>